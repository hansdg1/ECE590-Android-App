<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recordBtnText"
        android:id="@+id/recordBtn"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="56dp"
        android:enabled="true"
        android:clickable="true"
        android:onClick="recordBtnOnClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playBtnText"
        android:id="@+id/playBtn"
        android:clickable="true"
        android:enabled="true"
        android:onClick="playBtnOnClick"
        android:layout_alignTop="@+id/recordBtn"
        android:layout_toEndOf="@+id/textView" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reverb"
        android:id="@+id/reverbCheckbox"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/recordBtn" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low Pass Filter"
        android:id="@+id/lowPassCheckbox"
        android:layout_below="@+id/reverbCheckbox"
        android:layout_alignStart="@+id/reverbCheckbox" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High Pass Filter"
        android:id="@+id/highPassCheckbox"
        android:layout_below="@+id/lowPassCheckbox"
        android:layout_alignStart="@+id/lowPassCheckbox" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reverse"
        android:id="@+id/reverseCheckBox"
        android:layout_below="@+id/highPassCheckbox"
        android:layout_alignStart="@+id/highPassCheckbox" />

</RelativeLayout>
